{% extends "base.html.twig" %}
{% block page_title %}Formulaire{% endblock %}
{% block page_content %}
    <main>
        <form action="{{ path('connexion') }}" method="post" class="basic-form center">
            <fieldset>
                <legend>Connexion</legend>
                <div class="access-container">
                    <label for="login">Login</label>
                    <input id="login" type="text" name="_username" required value="{{ last_username }}"/>
                </div>
                <div class="access-container">
                    <label for="password">Mot de passe</label>
                    <input id="password" type="password" name="_password" required/>
                </div>
                <button type="submit" class="basic-form-submit">Se connecter</button>
            </fieldset>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        </form>
    </main>
{% endblock %}

